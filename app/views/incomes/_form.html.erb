<%= form_for @income, :html => {:class => "form-horizontal"} do |f| %>
  <% if @income.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@income.errors.count, "error") %> prohibited this income from being saved:</h2>

      <ul>
      <% @income.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= f.label :date %><br>
    <%= f.date_select :date, {:class => "form-control"} %>
  </div>
  <div class="field form-group">
    <%= f.label :client_id %><br>
    <%= f.select :client_id, Client.all.collect {|c| [c.name, c.id]}, {}, {:class => "form-control"} %>
  </div>
  <div class="field form-group">
    <%= f.label :income_type %><br>
    <%= f.text_field :income_type, {:class => "form-control"} %>
  </div>
  <div class="field form-group">
    <%= f.label :cashSales %><br>
    <%= f.text_field :cashSales, {:class => "form-control"} %>
  </div>
  <div class="field form-group">
    <%= f.label :hst %><br>
    <%= f.text_field :hst, {:class => "form-control"} %>
  </div>
  <div class="field form-group">
    <%= f.label :salesReturns %><br>
    <%= f.text_field :salesReturns, {:class => "form-control"} %>
  </div>
  <div class="field form-group">
    <%= f.label :totalSales %><br>
    <%= f.text_field :totalSales, {:class => "form-control"} %>
  </div>
  <div class="field form-group">
    <%= f.label :paymentOnAccount %><br>
    <%= f.text_field :paymentOnAccount, {:class => "form-control"} %>
  </div>



  <div class="actions">
    <%= f.submit nil, {:class => "btn btn-success"} %>
  </div>
<% end %>
