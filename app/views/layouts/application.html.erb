


<!DOCTYPE html>
<html>
<head>
  <title>TaxApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>


<ul class="nav nav-tabs">
  <li role="presentation"><%= link_to "Home", root_path %></li>
  <li role="presentation"><%= link_to "Incomes", incomes_path %></li>
  <li role="presentation"><%= link_to "Expenses", expenses_path %></li>
  <li role="presentation"><%= link_to "Clients", clients_path %></li>
  <li role="presentation"><%= link_to "Categories", categories_path %></li>
  <% if logged_in? %>
    <li><%= link_to "Users", '#' %></li>
      <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Account <b class="caret"></b></a>
        <ul class="dropdown-menu">
          <li><%= link_to "Profile", current_user %></li>
          <li><%= link_to "Settings", '#' %></li>
          <li class="divider"></li>
          <li>
            <%= link_to "Log out", logout_path, method: "delete" %>
          </li>
        </ul>
      </li>
   <% else %>
     <li><%= link_to "Log in", login_path %></li>
     <li role="presentation"><%= link_to "Sign up", signup_path %></li>
   <% end %>
</ul>

<div class="container">
  <% flash.each do |key, value| %>
    <div class="alert alert-<%= key %>"><%= value %></div>
  <% end %>
  <%= yield %>
  <%= debug(params) if Rails.env.development? %>
</div>

</body>
</html>
